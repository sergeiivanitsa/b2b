server {
    listen 80;
    server_name gw.pork.su;

    # Нужно для certbot-renew (HTTP-01 challenge)
    location ^~ /.well-known/acme-challenge/ {
        allow all;
        root /var/www/html;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name gw.pork.su;

    # Сертификаты (должны уже существовать после certbot)
    ssl_certificate /etc/letsencrypt/live/gw.pork.su/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/gw.pork.su/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # certbot renew не сломаем
    location ^~ /.well-known/acme-challenge/ {
        allow all;
        root /var/www/html;
    }

    # ВСЁ остальное — только RU app
    location / {
        allow 85.239.52.159;
        deny all;

        proxy_pass http://127.0.0.1:8001;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_connect_timeout 30s;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }
}
